<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemyAI.Views.WelcomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="WelcomePage">

    <VerticalStackLayout
        Background="IndianRed"
        HorizontalOptions="Fill"
        VerticalOptions="Fill">

        <Image
            Aspect="AspectFit"
            HeightRequest="300"
            Source="demy.png"
            VerticalOptions="Center"
            WidthRequest="300" />
        <Label Style="{StaticResource TitleText}" />
        <Label
            Style="{StaticResource TitleText}"
            Text="Empowering educators" />
        <Label
            Style="{StaticResource TitleText}"
            Text="Enlightening students" />
        <Label
            Style="{StaticResource TitleText}"
            Text="Demy AI your teaching assistant ally" />
    </VerticalStackLayout>
</ContentPage>