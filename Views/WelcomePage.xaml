<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemyAI.Views.WelcomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="Indigo">

    <Grid
        RowDefinitions="200,30,20,20,20"
        VerticalOptions="Center">
        <Image
            Aspect="AspectFit"
            HeightRequest="300"
            Source="demy.png"
            VerticalOptions="Center"
            WidthRequest="300" />
        <Label
            Grid.Row="2"
            HorizontalTextAlignment="Center"
            Text="DemyIA"
            TextColor="White" />
        <Label
            Grid.Row="3"
            HorizontalTextAlignment="Center"
            Text="Empowering educators, Enlightening students Demy AI your teacheng assistant ally"
            TextColor="White" />
        <Label
            Grid.Row="4"
            HorizontalTextAlignment="Center"
            Text="Version 1.0"
            TextColor="White" />

    </Grid>

</ContentPage>