<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemyAI.Views.ScheduleTestPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:DemyAI.Controls"
    xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:picker="clr-namespace:Syncfusion.Maui.Picker;assembly=Syncfusion.Maui.Picker"
    xmlns:vm="clr-namespace:DemyAI.ViewModels"
    x:DataType="vm:ScheduleTestPageViewModel">

    <ContentPage.Behaviors>
        <mct:EventToCommandBehavior
            Command="{Binding AppearingCommand}"
            EventName="Appearing" />
    </ContentPage.Behaviors>

    <ScrollView>
        <Grid
            Margin="10"
            RowDefinitions="Auto,50,*">
            <controls:UserDetailsExpander
                HandleCheckBoxCommand="{Binding HandleCheckBoxCommand}"
                Hint="Test name"
                PageTitle="Schedule a test"
                RoomName="{Binding RoomName}"
                Users="{Binding Users}" />

            <Button/>
        </Grid>
    </ScrollView>

</ContentPage>