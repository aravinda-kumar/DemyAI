<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemyAI.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tile="clr-namespace:DemyAI.Controls"
    xmlns:vm="clr-namespace:DemyAI.ViewModels"
    x:DataType="vm:HomePageViewModel">

    <CollectionView ItemsSource="{Binding proffs}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border>
                    <Label Text="{Binding .}" />
                    <Border.GestureRecognizers>
                        <PointerGestureRecognizer PointerEnteredCommand="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomePageViewModel}}, Path=enteredCommand}" />
                    </Border.GestureRecognizers>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>